{
  "name": "bt-dsl",
  "scopeName": "source.bt-dsl",
  "fileTypes": [".bt"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.bt-dsl",
      "match": "\\b(Tree|declare|false|import|in|out|ref|true|var)\\b"
    },
    {
      "name": "string.quoted.double.bt-dsl",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#string-character-escape"
        }
      ]
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.bt-dsl"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.bt-dsl"
        },
        {
          "name": "comment.block.bt-dsl",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.bt-dsl"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.bt-dsl"
            }
          }
        }
      ]
    },
    "string-character-escape": {
      "name": "constant.character.escape.bt-dsl",
      "match": "\\\\(x[0-9A-Fa-f]{2}|u[0-9A-Fa-f]{4}|u\\{[0-9A-Fa-f]+\\}|[0-2][0-7]{0,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.|$)"
    }
  }
}
