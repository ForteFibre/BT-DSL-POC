{
  "name": "bt-dsl",
  "version": "0.1.0",
  "private": true,
  "description": "BehaviorTree DSL - Compiles to BehaviorTree.CPP XML",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm run build:grammar && pnpm -r build",
    "build:grammar": "pnpm --filter @bt-dsl/tree-sitter build",
    "build:core": "pnpm --filter core build",
    "build:wasm": "pnpm --filter core build:wasm",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r --if-present lint",
    "lint:fix": "pnpm -r --if-present lint:fix",
    "lint:clang-tidy": "pnpm -r --if-present lint:clang-tidy",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "pnpm -r test",
    "test:e2e": "pnpm build && pnpm --filter bt-dsl-vscode test:e2e",
    "clean": "pnpm -r exec rm -rf out dist node_modules/.cache && rm -rf core/build core/build-wasm"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "typescript": "~5.4.0",
    "typescript-eslint": "^8.20.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "tree-sitter",
      "tree-sitter-cli"
    ]
  }
}
