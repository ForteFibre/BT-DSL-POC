{
  "name": "bt-dsl",
  "version": "0.1.0",
  "private": true,
  "description": "BehaviorTree DSL - Compiles to BehaviorTree.CPP XML",
  "repository": {
    "type": "git"
  },
  "license": "MIT",
  "scripts": {
    "build": "pnpm -r build",
    "build:core": "pnpm --filter core build",
    "build:wasm": "pnpm --filter core build:wasm",
    "build:lsp": "pnpm --filter core build:lsp",
    "dev": "pnpm -r --parallel dev",
    "docs:dev": "pnpm --filter bt-dsl-docs dev",
    "docs:build": "pnpm --filter bt-dsl-docs build",
    "docs:preview": "pnpm --filter bt-dsl-docs preview",
    "docs:lint": "markdownlint-cli2",
    "docs:lint:fix": "markdownlint-cli2 --fix",
    "docs:links": "node scripts/check-doc-links.mjs",
    "docs:links:external": "node scripts/check-doc-links.mjs --external",
    "lint": "pnpm -r --if-present lint && pnpm run docs:lint && pnpm run docs:links",
    "lint:fix": "pnpm -r --if-present lint:fix && pnpm run docs:lint:fix",
    "lint:clang-tidy": "pnpm -r --if-present lint:clang-tidy",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "test": "pnpm -r test",
    "test:e2e": "pnpm build && pnpm --filter bt-dsl-vscode test:e2e",
    "clean": "pnpm -r exec rm -rf out dist node_modules/.cache && rm -rf core/build core/build-lsp"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "fast-glob": "^3.3.3",
    "github-slugger": "^2.0.0",
    "globals": "^15.14.0",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.4.2",
    "remark-parse": "^11.0.0",
    "typescript": "~5.4.0",
    "typescript-eslint": "^8.20.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
